# Production Environment Variables
# Copy this file to .env and update the values

# Application
NODE_ENV=production
COMPOSE_PROJECT_NAME=places-app

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=change-this-strong-password-in-production
MONGO_DB_NAME=places_app

# API Configuration
JWT_SECRET=change-this-super-secret-jwt-key-in-production-must-be-very-long-and-random
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here

# Client Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com
NEXT_PUBLIC_APP_ENV=production

# SSL Configuration (for Nginx)
SSL_CERT_PATH=./docker/nginx/ssl/cert.pem
SSL_KEY_PATH=./docker/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30